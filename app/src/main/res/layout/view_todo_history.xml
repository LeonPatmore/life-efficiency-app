<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/TodoHistoryLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/template_title_text"
            app:myText="@{`Todo History`}" />

        <include layout="@layout/template_divider" />

        <include
            android:id="@+id/TodoHistoryBackButton"
            layout="@layout/template_small_button"
            app:myText="@{`Back`}" />

        <include
            android:id="@+id/TodoHistoryList"
            layout="@layout/template_list_view"/>

    </LinearLayout>

</layout>
